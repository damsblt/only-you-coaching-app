# ==========================================
# DATABASE - Supabase PostgreSQL
# ==========================================
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE"
# 📝 Remplacer avec votre URL Supabase complète

# ==========================================
# SUPABASE
# ==========================================
NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT.supabase.co"
# 📝 Obtenir dans: Supabase Dashboard > Settings > API
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
# 📝 anon/public key (safe pour le client)
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"
# ⚠️ service_role key (JAMAIS exposer côté client!)

# ==========================================
# NEXTAUTH.JS - Authentication
# ==========================================
NEXTAUTH_URL="http://localhost:3000"
# Production: "https://only-you-coaching.com"
NEXTAUTH_SECRET="[GENERATE_WITH: openssl rand -base64 32]"
# 🔑 Générer un nouveau secret pour chaque environnement

# OAuth Providers (Optionnel)
GOOGLE_CLIENT_ID="your_google_client_id"
GOOGLE_CLIENT_SECRET="your_google_client_secret"
# 📝 Créer sur: https://console.cloud.google.com/apis/credentials
# - Créer un projet OAuth 2.0
# - Ajouter http://localhost:3000/api/auth/callback/google (dev)
# - Ajouter https://only-you-coaching.com/api/auth/callback/google (prod)

# ==========================================
# AWS S3 - Video Storage
# ==========================================
AWS_REGION="eu-north-1"
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
AWS_S3_BUCKET_NAME="only-you-coaching"
# 📝 Créer sur: https://console.aws.amazon.com/s3/
# - Créer un bucket
# - Configurer CORS
# - Créer un IAM user avec S3 access

# ==========================================
# STRIPE - Payments (⚠️ IMPORTANT)
# ==========================================
# Test Keys (développement)
STRIPE_PUBLISHABLE_KEY="pk_test_[YOUR_TEST_KEY]"
STRIPE_SECRET_KEY="sk_test_[YOUR_TEST_KEY]"
STRIPE_WEBHOOK_SECRET="whsec_[YOUR_TEST_WEBHOOK_SECRET]"
# 📝 Obtenir sur: https://dashboard.stripe.com/test/apikeys

# Production Keys (⚠️ NE JAMAIS COMMITTER EN CLAIR)
# STRIPE_PUBLISHABLE_KEY="pk_live_[YOUR_LIVE_KEY]"
# STRIPE_SECRET_KEY="sk_live_[YOUR_LIVE_KEY]"
# STRIPE_WEBHOOK_SECRET="whsec_[YOUR_LIVE_WEBHOOK_SECRET]"

# Stripe Price IDs (à créer dans Stripe Dashboard > Products)
# Accompagnement:
# - Essentiel: 69 CHF/mois → price_[ID]_essentiel_chf
# - Avancé: 109 CHF/mois → price_[ID]_avance_chf
# - Premium: 149 CHF/mois → price_[ID]_premium_chf
# Autonomie:
# - Starter: 35 CHF/mois (2 mois) → price_[ID]_starter_chf
# - Pro: 30 CHF/mois (4 mois) → price_[ID]_pro_chf
# - Expert: 25 CHF/mois (6 mois) → price_[ID]_expert_chf

# ==========================================
# STRAPI CMS (⚠️ À configurer après installation)
# ==========================================
NEXT_PUBLIC_STRAPI_URL="http://localhost:1337"
# Production: "https://cms.only-you-coaching.com"
STRAPI_API_TOKEN="[GENERATE_IN_STRAPI_ADMIN]"
# 📝 Générer dans: Strapi Admin > Settings > API Tokens > Create new
# - Type: Full access (ou Custom selon besoins)
# - Duration: Unlimited (pour production)

# ==========================================
# OPTIONAL - Analytics & Monitoring
# ==========================================
NEXT_PUBLIC_GA_ID="G-XXXXXXXXXX"
# 📝 Obtenir sur: https://analytics.google.com/
SENTRY_DSN="https://[KEY]@[ORG].ingest.sentry.io/[PROJECT]"
# 📝 Obtenir sur: https://sentry.io/

# ==========================================
# OPTIONAL - Email Service (pour notifications)
# ==========================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# EMAIL_FROM="noreply@only-you-coaching.com"
# 📝 Pour Gmail: créer un App Password
# 📝 Alternative: SendGrid, Mailgun, AWS SES

